.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(169.85deg, rgb(40, 40, 40) 35.034%,rgb(60, 52, 47) 80.389%)
  overflow hidden

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 116px 0 108px

  &__title
    padding 0 0 20px
    +above($breakpoints.sm)
      padding 0 0 30px
    +above($breakpoints.md)
      padding 0 0 50px
    +above($breakpoints.xxl)
      padding 0 0 70px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 30px 80px
    +above($breakpoints.md)
      gap: 50px 100px
    +above($breakpoints.xxl)
      gap: 70px 105px

  &__card
    position relative
    width 280px !important
    border-top: 1px solid #5C5C5C
    +above($breakpoints.sm)
      width 180px !important
    +above($breakpoints.md)
      width: 230px !important;
    +above($breakpoints.xxl)
      width 290px !important
      height: 145px
    &:after
      content: ""
      position: absolute
      width 42%
      background-color $color-gold-e2
      height: 4px
      left: 0
      top: 0
      transform: translateY(-100%)
      +above($breakpoints.sm)
        height: 2px
      +above($breakpoints.md)
        height: 3px
      +above($breakpoints.xxl)
        height: 4px

  &__card-title
    padding 10px 0 0
    +above($breakpoints.sm)
      padding 10px 0 5px
    +above($breakpoints.md)
      padding 15px 0 7px
    +above($breakpoints.xxl)
      padding 20px 0 7px

  &__card-text
    color: #A3A3A3

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 20px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 228px
      margin-top 40px
    +above($breakpoints.md)
      margin-top 60px
      gap: 330px
    +above($breakpoints.xxl)
      margin-top 100px
      gap: 350px

  &__bottom-text
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 30px

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      width 180px
      gap: 10px
    +above($breakpoints.md)
      width 230px
      gap: 12px
    +above($breakpoints.xxl)
      width 280px
      gap: 14px
