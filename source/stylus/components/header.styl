.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      flex-basis: 30%

  &__logo
    width 140px
    height: auto
    +above($breakpoints.sm)
      width 180px
    +above($breakpoints.md)
      width 220px
    +above($breakpoints.xxl)
      width 290px

  &__connection
    display: flex
    align-items: center
    justify-content flex-end
    gap: 6px
    +above($breakpoints.sm)
      margin-bottom 4px
      flex-basis: 30%
      gap: 7px;
    +above($breakpoints.md)
      margin-bottom 6px
      gap: 9px;
    +above($breakpoints.xxl)
      margin-bottom 8px
      gap: 11px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
