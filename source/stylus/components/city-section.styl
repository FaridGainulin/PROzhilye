.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color $color-carbonic

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 40px 0 20px
    +above($breakpoints.md)
      padding 60px 0 30px
    +above($breakpoints.xxl)
      padding 90px 0 44px

  &__title,
  &__sub-title,
  &__text
    text-align: center

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 20px 0 30px
    +above($breakpoints.md)
      padding 30px 0 40px
    +above($breakpoints.xxl)
      padding 40px 0 60px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    margin 15px 0 30px
    +above($breakpoints.sm)
      margin 20px 0 60px
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      margin 30px 0 90px
      gap: 12px
    +above($breakpoints.xxl)
      margin 40px 0 180px
      gap: 14px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 280px !important
