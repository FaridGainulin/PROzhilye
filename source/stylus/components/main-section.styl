.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #1B0C10
  overflow hidden

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 10px 0 50px
    +above($breakpoints.md)
      padding 15px 0 70px
    +above($breakpoints.xxl)
      padding 17px 0 120px

  &__title,
  &__sub-title,
  &__bottom-feedback
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 10px
    +above($breakpoints.md)
      padding 70px 0 15px
    +above($breakpoints.xxl)
      padding 93px 0 15px

  &__sub-title
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 0 0 20px
    +above($breakpoints.md)
      padding 0 0 30px
    +above($breakpoints.xxl)
      padding 0 0 45px


  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 20px
    +above($breakpoints.md)
      gap: 40px
    +above($breakpoints.xxl)
      gap: 59px

  &__bottom-card-wrapper
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      inset: -1px
      background: linear-gradient(180deg, #ec9741 0%, rgba(134, 86, 37, 0.1) 70%);
      border-radius: 5px
      +above($breakpoints.md)
        border-radius: 8px
      +above($breakpoints.xxl)
        border-radius: 10px

  &__bottom-card
    width 100%
    display: flex
    align-items: center
    gap: 5px
    text-align: center
    backdrop-filter: blur(15px);
    background: linear-gradient(178deg, rgba(0, 0, 0, 1), rgba(83, 68, 63, 0.8) 100%);
    border-radius: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      flex-direction: column
      gap: 10px
      padding 20px 0
      width 140px
    +above($breakpoints.md)
      border-radius: 8px
      gap: 15px
      padding 25px 0
      width 200px
    +above($breakpoints.xxl)
      border-radius: 10px
      gap: 20px
      padding 32px 0
      width 224px
      height: 302px

  &__bottom-img
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 90px
    +above($breakpoints.xxl)
      width 108px

  &__bottom-feedback
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      margin-bottom 5px
      align-items: flex-start
      gap: 20px
    +above($breakpoints.md)
      margin-bottom 6px
      gap: 25px
    +above($breakpoints.xxl)
      margin-bottom 7px
      gap: 35px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 14px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 280px !important
